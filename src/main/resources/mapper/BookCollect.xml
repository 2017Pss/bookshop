<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.daniel.dao.BookCollectDAO">

    <insert id="add" useGeneratedKeys="true" keyProperty="id" parameterType="BookCollect">
            insert into book_collect
                ( book_id,student_id,collect_price)
            values
                (#{bookId},#{studentId},#{collectPrice})
     </insert>

    <select id="getBookByStudentId" parameterType="String" resultType="BookCollect">
            select * from book_collect where student_id = #{id} order by create_time desc
    </select>

    <select id="getListByStudentId" resultType="BookCollect">
        select * from book_collect where student_id = #{id} order by create_time desc
            limit #{start},#{count}
    </select>

    <select id="getCollectBookNum" resultType="int">
        select count(*) from book_collect where student_id = #{id}
    </select>

    <delete id="delete" parameterType="int">
        delete from book_collect where book_id= #{id}
    </delete>

</mapper>